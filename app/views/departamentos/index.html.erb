        <td><%= link_to 'Editar', edit_departamento_path(departamento), class: "btn btn-default" %></td>
        <td><%= link_to 'Remover', departamento, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: "btn btn-default"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

